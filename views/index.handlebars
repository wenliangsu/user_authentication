<div class="main-container align-self-center mt-5 ">
  <div class="title h1 text-center mb-5">Account login</div>
  <div class="input-info d-flex justify-content-center">
    <form action="/" method="POST">

      <div class="input-group input-group-lg mb-3 border border-dark">
        <input class="form-control" type="email" name="email" placeholder="Email" required>
      </div>
      <div class="input-group input-group-lg mb-3 border border-dark">
        <input class="form-control " type="password" name="password" placeholder="password" minlength="6" required>
      </div>
      <div class="row justify-content-center">
        <button class="btn btn-lg border border-dark mt-3 w-50 shadow p-1 mb-2 bg-body" type="submit">Submit</button>
      </div>
      
    </form>
  </div>
</div>